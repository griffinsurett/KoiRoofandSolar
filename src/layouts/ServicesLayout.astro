  <!-- FAQ -->
  <Section
    collection="faq"
    query="related"
    variant="faqs"
    sectionClass="py-[var(--spacing-2xl)]"
    contentClass="container mx-auto"
    heading={[
      { text: "Frequently Asked Questions", tagName: "h2", class: "h2" },
    ]}
  />

  <!-- Gallery -->
  <Section
    heading={[
      {
        text: `Get Started with ${entry.slug.charAt(0).toUpperCase() + entry.slug.slice(1)}, by contacting a ${entry.slug.charAt(0).toUpperCase() + entry.slug.slice(1)} Expert!`,
        tagName: "h2",
        class: "h2 text-bg uppercase py-[var(--spacing-sm)] slide-down",
      },
    ]}
    description={`Whether you need ${entry.slug} services or just want to learn more, we’ve got you covered. Scroll up to revisit details or give us a call now.`}
    collection="projects"
    query="getAll"
    buttonsSectionClass="block"
    buttons={[
      {
        text: "Get a Free Quote",
        link: getQuote,
        variant: "tertiary",
      },
      {
        text: "Call Us",
        link: "tel:+1-800-123-4567",
        variant: "secondary",
        showIcon: true,
        iconProps: {
          element: PhoneIcon,
          position: "left",
          className: "mr-[var(--spacing-sm)]",
        },
      },
    ]}
  >
    {
      entry.slug === "solar" && (
        <Section
          variant="banner"
          heading={{
            text: "Is Your Roof Ready for Solar?",
            tagName: "h2",
            class: "h2", // you can still layer on extra classes
          }}
          description="A durable, leak‑free roof is the foundation of any solar installation. Upgrade to a weather‑resistant roof today and get a streamlined solar install when you’re ready."
          buttons={[
            {
              text: "Get a Roofing Quote",
              link: "/services/roofing",
              variant: "secondary",
            },
          ]}
        />
      )
    }

    {
      entry.slug === "roofing" && (
        <Section
          variant="banner"
          heading={{
            text: "Already Have a Roof? Go Solar and Save!",
            tagName: "h2",
            class: "h2",
          }}
          description="Maximize the value of your new roof by adding a high‑efficiency solar array. Lock in $0 down financing, reduce your energy bills, and qualify for tax incentives—all with our seamless roofing + solar package."
          buttons={[
            {
              text: "Explore Solar Options",
              link: "/services/solar",
              variant: "secondary",
            },
          ]}
        />
      )
    }
  </Section>
</BaseLayout>
