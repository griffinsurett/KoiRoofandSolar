---
// src/layouts/ServicesLayout.astro
import BaseLayout from "./BaseLayout.astro";
import Section    from "@/components/Section.astro";
import QuoteForm  from "@/components/Forms/QuoteForm.astro";
import Video      from "@/components/Video.astro";
import KoiVideo   from "@/assets/video.mp4";
import NotLikeVideo   from "@/assets/notlikekoi.mp4";
import KoiVideoPoster from "@/assets/videothumbnail.jpeg";
import { SiteData }   from "@/content/SiteData";

const { entry, description } = Astro.props;

// 1️⃣ Glob-register all .astro under /src/components/Forms
const formModules = import.meta.glob("/src/components/Forms/*.astro", { eager: true });

// 2️⃣ Take the user’s `form` value (e.g. "components/Forms/SolarForm.astro")
//    and turn it into the filesystem key:
const raw = entry.data.form;                   // "components/Forms/SolarForm.astro"
const fsKey = raw ? `/src${raw}` : undefined; // "/src/components/Forms/SolarForm.astro"

// 3️⃣ Lookup in the glob map, fallback to QuoteForm
const FormComponent = (fsKey && formModules[fsKey]?.default) || QuoteForm;
---
<BaseLayout {...Astro.props}>
  <Section
    title={Astro.props.title}
    buttonsSectionClass="h6 mt-[var(--spacing-2xl)] gap-[var(--spacing-xl)] flex flex-col md:flex-row items-center justify-center w-4/5"
    sectionClass="min-h-[100vh] lg:text-left flex items-center justify-center bg-cover bg-fixed bg-center z-100 shadow-lg pt-[var(--spacing-4xl)] mb-[100px] w-full"
    contentClass="flex flex-col lg:flex-row justify-center items-center lg:items-start lg:gap-[var(--spacing-xl)] mx-auto text-center container mt-[var(--spacing-3xl)]"
    topContentClass="w-9/10 lg:w-6/11 py-[var(--spacing-sm)] lg:py-0 flex flex-col items-center justify-center lg:justify-end lg:sticky lg:top-0"
    headingAreaClass="flex flex-col text-center lg:text-left w-full h-full z-10 lg:mt-[var(--spacing-2xl)]"
    buttonsSectionClass="hidden"
    childSlotClass="lg:w-3/7 p-0 m-0"
    heading={[
      {
        text: `Koi ${entry.slug}`,
        tagName: "h1",
        class: "text-accent py-[var(--spacing-sm)] top-heading font-bold",
      },
      {
        text: `Top-Quality ${entry.slug} Solutions for Your Home`,
        tagName: "h2",
        class: "h1 text-bg py-[var(--spacing-sm)]",
      },
    ]}
    ,
    description={description}
    descriptionClass="h4 font-thin text-text-light"
    backgroundMedia={{
      video: {
        src: KoiVideo,
      },
      image: {
        src: SiteData.MainBGImage.src,
        imageClass: "filter brightness-50 bg-cover bg-center xl:bg-fixed",
      },
      overlayClass: "bg-primary opacity-60",
    }}
  >
  <FormComponent />
</Section>
  <Section
    collection="benefits"
    query="related"
    heading={[
      {
        text: `Why Choose Koi ${entry.slug}?`,
        tagName: "label",
        class: "h5 font-medium text-secondary uppercase py-[var(--spacing-sm)] slide-down",
      },
      {
        text: "Swiftly Installed, Smartly Priced.",
        tagName: "h2",
        class: "h2 heading-primary slide-up",
      },
    ]}
  >
    <Video
      src={NotLikeVideo}
      poster={KoiVideoPoster}
      controls
      muted
      autoplay={true}
      loop={false}
      class="shadow-xs border-radius"
      />
  </Section>
  <!-- Testimonials -->
  <Section
    collection="testimonials"
    query="getAll"
    variant="testimonials"
    sectionClass="py-[var(--spacing-2xl)] bg-bg text-primary"
    contentClass="container mx-auto"
    descriptionClass="hidden"
    buttonsSectionClass="py-[var(--spacing-lg)]"
  />
<Section collection="pricing" query="related"/>

  <!-- Related Projects -->
  <Section
    collection="projects"
    query="getAll"
  />

  <!-- FAQ -->
  <Section
    collection="faq"
    query="related"
    variant="faqs"
    sectionClass="py-[var(--spacing-2xl)]"
    contentClass="container mx-auto"
    heading={[{ text: "Frequently Asked Questions", tagName: "h2", class: "h2" }]}
  />
  <slot />
</BaseLayout>
