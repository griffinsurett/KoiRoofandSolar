---
// src/layouts/OtherPages.astro
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import BaseLayout from "./BaseLayout.astro";
---
<BaseLayout {...Astro.props}>
  <SecondaryHero
    title={Astro.props.title}
    backgroundMedia={{
      image: {
        src: "/assets/hero-bg.jpg",
        imageClass: "filter brightness-50 bg-cover bg-center xl:bg-fixed",
      },
      overlayClass: "bg-black opacity-50",
    }}
    sectionClass="flex items-center justify-center min-h-[60vh]"
    contentClass="container mx-auto text-center">
  </SecondaryHero>
  <slot />
</BaseLayout>
