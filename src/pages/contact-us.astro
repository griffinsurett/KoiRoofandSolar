---
// src/pages/contact-us.astro
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import ExtendedLayout from "../layouts/ExtendedLayout.astro";
import { ContactData } from "@/content/SiteData";
import Section from "@/components/Section.astro";
import ContactForm from "@/components/Forms/ContactForm.astro";
import Menu from "@/components/Menu/Menu.astro";
import { getContactMenuItems } from "@/queries/ContactMenu";
import ContactItem from "@/components/Menu/BarMenu/contact-item.astro";
---
<ExtendedLayout title="Contact Us" description="Get in touch with Cleanomatic">
  <SecondaryHero title="Contact Us" description="Get in touch with Cleanomatic" />
  <!-- <section class="p-[var(--spacing-lg)]">
    <h1>Contact Us</h1>
    <p>
      If you have any questions, please email us at 
      <a href="mailto:griffinswebservices@gmail.com">griffinswebservices@gmail.com</a>
      or call 
      <a href={`tel:${ContactData.phone}`}>{ContactData.phone}</a>.
    </p>
  </section> -->
  <Section
    sectionClass="flex justify-center items-center p-[var(--spacing-3xl)] md:p-[var(--spacing-md)] bg-cover bg-center bg-fixed min-h-[100vh]"
    buttonsSectionClass="flex flex-col items-center justify-center w-full h-full z-10 mt-[var(--spacing-md)]"
    topContentClass="flex flex-col items-center justify-center text-center w-full h-full z-10 text-text-light md:w-3/4 w-auto"
    headingAreaClass="">
     <!-- Your inner content here -->
     <Menu
        items={await getContactMenuItems()}
        listClass="flex flex-col justify-center items-center xl:flex-row gap-[var(--spacing-md)]"
        menuItem={{ class: "text-lg text-primary hover:text-secondary", component: ContactItem }}
        breakpoint="none"
      />
    
    <ContactForm/>
     </div>
  
  </Section>

</ExtendedLayout>
