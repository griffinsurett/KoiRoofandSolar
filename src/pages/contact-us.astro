---
// src/pages/contact-us.astro
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import ExtendedLayout from "../layouts/ExtendedLayout.astro";
import { ContactData } from "@/content/SiteData";
import Section from "@/components/Section.astro";
import ContactForm from "@/components/Forms/ContactForm.astro";
import Menu from "@/components/Menu/Menu.astro";
import { getContactMenuItems } from "@/queries/ContactMenu";
import ContactItem from "@/components/Menu/BarMenu/contact-item.astro";
---

<ExtendedLayout title="Contact Us" description="Get in touch with Cleanomatic">
  <SecondaryHero
    title="Contact Us"
    description="Get in touch with Cleanomatic"
  />
  <Section
    sectionClass="flex justify-center items-center p-[var(--spacing-3xl)] md:p-[var(--spacing-md)] bg-cover bg-center bg-fixed min-h-[100vh]"
    topContentClass="flex flex-col items-center justify-center text-center w-full h-full z-10 text-text-light md:w-3/4 w-auto"
    childSlotClass="flex flex-col lg:flex-row justify-center items-center"
  >
