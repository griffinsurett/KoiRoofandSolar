---
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import ExtendedLayout from "../layouts/ExtendedLayout.astro";
import { ContactData, SiteData } from "@/content/SiteData";
import Section from "@/components/Section.astro";
import ContactForm from "@/components/Forms/ContactForm.astro";
import Menu from "@/components/Menu/Menu.astro";
import { getContactMenuItems } from "@/queries/ContactMenu";
import ContactItem from "@/components/Menu/BarMenu/ContactMenuItem.astro";
---

<ExtendedLayout
  title="Contact Us"
  description=`Have questions about our roofing or solar services? Reach out to ${SiteData.title} and we'll get back to you as soon as possible.`
>
  <SecondaryHero
    title="Contact Us"
    description="We're here to help with any questions or to schedule your free consultationâ€”just drop us a line below."
  />

  <Section
    sectionClass="flex justify-center items-center p-[var(--spacing-3xl)] md:p-[var(--spacing-md)] bg-cover bg-center bg-fixed min-h-[100vh]"
    topContentClass="flex flex-col items-center justify-center text-center w-full h-full z-10 text-text-light md:w-3/4 w-auto"
    childSlotClass="flex flex-col lg:flex-row justify-center items-center"
  >
    <!-- Uncomment this block if you want to show contact links alongside the form -->
    <!--
    <div class="menu-container lg:w-1/3 w-full mb-[var(--spacing-2xl)] lg:mb-0">
      <Menu
        items={await getContactMenuItems()}
        listClass="flex flex-col gap-[var(--spacing-md)] text-left"
        menuItem={{
          listClass: "flex flex-col items-center text-center",
          component: ContactItem,
        }}
        breakpoint="none"
      />
    </div>
    -->

    <div class="form-container lg:w-4/5 w-full mt-[-25vh]">
      <ContactForm />
    </div>
  </Section>
</ExtendedLayout>
