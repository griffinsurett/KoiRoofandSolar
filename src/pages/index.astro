---
// src/pages/index.astro
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import Section from "@/components/Section.astro";
import PrimaryHero from "@/components/StaticSections/PrimaryHero.astro";
import Video from "@/components/Video.astro";
import AboutImage from "@/assets/koiandfriends2.jpg";
import KoiVideo from "@/assets/notlikekoi.mp4";
import KoiVideoPoster from "@/assets/videothumbnail.jpeg";
import { ContactData, ServiceBtns, SiteData } from "@/content/SiteData";
import MainPageLayout from "@/layouts/MainPageLayout.astro";
---

<ExtendedLayout
  title={SiteData.title || SiteData.tagline}
  description={SiteData.description}
  featuredImage={SiteData.MainBGImage.src}
>
  <!-- Hero Section -->
   <Section
  variant="primaryHero"
  heading={[
    { text: SiteData.title,  tagName: "h1", class: "top-heading py-[var(--spacing-sm)] text-accent font-bold load-slide-down" },
    { text: "Top-Quality Roofing & Solar Solutions for Your Home", tagName: "h2", class: "h1 text-bg load-slide-up" },
    { text: SiteData.tagline, tagName: "h4", class: "h4 text-text-light py-[var(--spacing-sm)] font-thin load-fade-in" },
  ]}
  buttons={ServiceBtns}
/>
<MainPageLayout/>

  <!-- <Section collection="faq" query="getAll" /> -->
</ExtendedLayout>
