---
// src/pages/index.astro
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import Section from "@/components/Section.astro";
import PrimaryHero from "@/components/StaticSections/PrimaryHero.astro";
import Video from "@/components/Video.astro";
import AboutImage from "@/assets/koiandfriends.jpg";
import KoiVideo from "@/assets/notlikekoi.mp4";
import KoiVideoPoster from "@/assets/videothumbnail.jpeg";
import { SiteData } from "@/content/SiteData";
import { Image } from "astro:assets";
---

<ExtendedLayout
  title={SiteData.title || SiteData.tagline}
  description="Your gateway to amazing projects."
>
  <!-- Hero Section -->
  <PrimaryHero title="Welcome to Astro!" />

  <Section
  variant="imageCol"
  contentClass="md:flex-row-reverse"
  topContentClass="lg:sticky lg:top-0"
  headingAreaClass="py-[var(--spacing-2xl)] md:py-[var(--spacing-md)]"
  heading={[
    {
      text: "About Koi Roofing & Solar",
      tagName: "h2",
    },
    {
      text: `"Some start at the bottom we go to the top"`,
      tagName: "h5",
      class: "h5 py-[var(--spacing-sm)] font-thin",
    },

  ]}
  buttons={[
    { text: "Get Started", href: "/contact-us", variant: "primary" },
    { text: "Learn More", href: "/about-us", variant: "secondary" },
  ]}
  description={SiteData.description}
>
