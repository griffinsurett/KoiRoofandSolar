---
// src/components/StaticSections/SecondaryHero.astro
import Section from "../Section.astro";
const { title } = Astro.props; // The hero title passed in as a prop
import HeroBg from "@/assets/background.svg";
import KoiVideo from "@/assets/video.mp4";
import { SiteData } from "@/content/SiteData";
---
<Section
backgroundMedia={{
  video: {
    src: KoiVideo,
  },
  image: {
    src: SiteData.MainBGImage.src,
    imageClass: "filter brightness-50 bg-cover bg-center xl:bg-fixed",
  },
  overlayClass: "bg-primary opacity-60",
}}
  heading={[{ text: title, tagName: "h1", class: "h1 text-bg pt-[var(--spacing-lg)] load-scale-up" }]}
  sectionClass="flex items-center justify-center min-h-[50vh] shadow-lg"
  contentClass="container mx-auto text-center"
>
</Section>