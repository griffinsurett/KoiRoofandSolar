---
// src/components/StaticSections/PrimaryHero.astro
import Section from "@/components/Section.astro";
import { SiteData } from "@/content/SiteData";
import KoiVideo from "@/assets/video.mp4";
---

<Section
  buttonsSectionClass="h6 mt-[var(--spacing-xl)] gap-[var(--spacing-xl)] flex flex-col md:flex-row items-center justify-center w-18/20 lg:w-4/5"
  sectionClass="section-lg text-center flex items-center justify-center bg-cover bg-fixed bg-center z-100 shadow-lg p-[var(--spacing-lg)] md:p-[var(--spacing-md)]"
  contentClass="lg:w-4/6 flex flex-col items-center justify-center"
  headingAreaClass="flex flex-col items-center justify-center text-center w-full h-full z-10"
  heading={[
    {
      text: SiteData.title,
      tagName: "h1",
      class: "top-heading py-[var(--spacing-sm)] text-accent font-bold",
    },
    {
      text: "Top-Quality Roofing & Solar Solutions for Your Home",
      tagName: "h2",
      class: "h1 text-bg py-[var(--spacing-sm)]",
    },
    {
      text: SiteData.tagline,
      tagName: "h4",
      class: "h4 text-text-light py-[var(--spacing-sm)] font-thin",
    },
  ]}
  ,
  backgroundMedia={{
    video: {
      src: KoiVideo,
    },
    image: {
      src: SiteData.MainBGImage.src,
      imageClass: "filter brightness-50 bg-cover bg-center xl:bg-fixed",
    },
    overlayClass: "bg-primary opacity-60",
  }}
  buttons={[
    { text: "Roofing Services", link: "/services/roofing", variant: "tertiary", class: "w-full" },
    { text: "Solar Services", link: "/services/solar", variant: "secondary", class: "w-full" },
  ]}
/>
