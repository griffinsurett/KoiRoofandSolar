---
import { formatPhoneNumber } from "@/utils/ContentUtils";
import Section from "../Section.astro";
import { ContactData } from "@/content/SiteData";
import PhoneIcon from "@/components/Phone";
---

<Section
  variant="media2"
  contentClass="flex-col items-center justify-center"
  heading={[
    {
      text: "¡Hablamos Español!",
      tagName: "h2",
      class: "h2 text-bg uppercase py-[var(--spacing-sm)]",
    },
  ]}
  description="Nuestro equipo está listo para atenderle en su idioma. ¡Llámanos ahora!"
  buttons={[
    {
      text: `Llámanos ${formatPhoneNumber(ContactData.phone)}`,
      link: `tel:${ContactData.phone}`,
      variant: "secondary",
      showIcon: true,
      iconProps: {
        element: PhoneIcon,       // your SVG component
        position: "left",         // icon on the left
        className: "mr-2 h-5 w-auto", // spacing + sizing
      },
    },
  ]}
  buttonsSectionClass="mt-[var(--spacing-md)]"
/>
