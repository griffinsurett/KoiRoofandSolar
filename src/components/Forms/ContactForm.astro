---
import Form      from "@/components/Forms/Form.astro";
import TextInput from "@/components/Forms/Inputs/TextInput.astro";
import Textarea  from "@/components/Forms/Inputs/Textarea.astro";
import Select    from "@/components/Forms/Inputs/Select.astro";
import { SiteData } from "@/content/SiteData";
import { getCurrentEntryId } from "@/utils/CurrentEntry";
import { getParentServiceItems } from "@/queries/getParentServiceItems";

const {
  inputClasses   = "border border-[var(--color-border)] transition-default py-[var(--spacing-sm)] px-[var(--spacing-md)] w-full bg-light-opacity placeholder:text-[var(--color-primary)] text-primary rounded-md",
  wrapperClasses = "mb-[var(--spacing-md)] w-full flex flex-col text-left",
  labelClasses   = "text-primary mb-[var(--spacing-xs)] font-thin text-left",
} = Astro.props;

const currentPage = getCurrentEntryId(Astro);
const parentServices = await getParentServiceItems();
const serviceOptions = parentServices.map(({ slug, label }) => ({
  value: slug,
  label,
}));

const formAction = (
  import.meta.env.PUBLIC_INTEGRATION_FORMSPREE +
  import.meta.env.PUBLIC_CONTACT_FORM
);
---

<Form
  name="contact-form"
  class="bg-bg py-[var(--spacing-2xl)] px-[var(--spacing-2xl)] rounded-4xl shadow-lg w-[90vw] lg:w-full gap-[var(--spacing-md)]"
  formClass="pt-[var(--spacing-md)]"
  formLabel="Get in Touch"
  enableSuccessBanner={true}
  successBannerMessage="Thank you for your message. We will get in touch with you shortly."
  successBannerClass="p-[var(--spacing-sm)] bg-primary text-bg rounded"
  action={formAction}
>
  <input type="hidden" name="Page-of-Submission" value={currentPage} />

  <div class="flex flex-col lg:flex-row lg:space-x-[var(--spacing-sm)] text-sm">
    <div class="w-full lg:w-1/2">
      <TextInput
        name="firstName"
        label="First Name"
        placeholder="First Name"
        required
        inputClass={inputClasses}
        wrapperClass={wrapperClasses}
        labelClass={labelClasses}
      />
    </div>
    <div class="w-full lg:w-1/2">
      <TextInput
        name="lastName"
        label="Last Name"
        placeholder="Last Name"
        required
        inputClass={inputClasses}
        wrapperClass={wrapperClasses}
        labelClass={labelClasses}
      />
    </div>
  </div>

  <div class="flex flex-col lg:flex-row lg:space-x-[var(--spacing-sm)]">
    <div class="w-full lg:w-1/2">
      <TextInput
        name="email"
        type="email"
        label="Email Address"
        placeholder="you@example.com"
        required
        inputClass={inputClasses}
        wrapperClass={wrapperClasses}
        labelClass={labelClasses}
      />
    </div>
    <div class="w-full lg:w-1/2">
      <TextInput
        name="phone"
        type="tel"
        label="Phone Number"
        placeholder="123-456-7890"
        inputClass={inputClasses}
        wrapperClass={wrapperClasses}
        labelClass={labelClasses}
      />
    </div>
  </div>

  <Select
    name="service"
    label="Service of Interest"
    required
    options={serviceOptions}
    selectClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <div class="w-full">
    <Textarea
      name="message"
      label="Message Us"
      placeholder="Tell us more about your needsâ€¦"
      required
      rows={5}
      inputClass={inputClasses}
      wrapperClass={wrapperClasses}
      labelClass={labelClasses}
    />
  </div>
</Form>
