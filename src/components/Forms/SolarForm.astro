---
import Form      from "@/components/Forms/Form.astro";
import TextInput from "@/components/Forms/Inputs/TextInput.astro";
import Textarea  from "@/components/Forms/Inputs/Textarea.astro";
import Select    from "@/components/Forms/Inputs/Select.astro";
import { SiteData } from "@/content/SiteData";
import { getCurrentEntryId } from "@/utils/CurrentEntry";

const {
  inputClasses   = "border border-[var(--color-border)] transition-default py-[var(--spacing-sm)] px-[var(--spacing-md)] w-full bg-light-opacity placeholder:text-[var(--color-primary)] text-primary rounded-md",
  wrapperClasses = "mb-[var(--spacing-md)] w-full flex flex-col text-left",
  labelClasses   = "text-primary mb-[var(--spacing-xs)] font-thin text-left",
} = Astro.props;

const currentPage = getCurrentEntryId(Astro);
---

<Form
  name="solar-form"
  action="https://calendly.com/griffinswebservices/30min"
  class="bg-bg py-[var(--spacing-2xl)] px-[var(--spacing-2xl)] rounded-4xl shadow-lg w-[90vw] lg:w-full gap-[var(--spacing-md)] mb-[-100px] xl:mb-[-200px]"
  formClass="pt-[var(--spacing-md)]"
  formLabel="Solar Inquiry"
  enableSuccessBanner={false}
>
  <input type="hidden" name="Page-of-Submission" value={currentPage} />

  <div class="flex flex-col lg:flex-row lg:space-x-[var(--spacing-sm)] text-sm">
    <TextInput
      name="firstName"
      label="First Name"
      placeholder="First Name"
      required
      inputClass={inputClasses}
      wrapperClass={wrapperClasses}
      labelClass={labelClasses}
    />
    <TextInput
      name="lastName"
      label="Last Name"
      placeholder="Last Name"
      required
      inputClass={inputClasses}
      wrapperClass={wrapperClasses}
      labelClass={labelClasses}
    />
  </div>

  <TextInput
    name="address"
    label="Address (Include ZIP code)"
    placeholder="123 Main St, City, ST 12345"
    required
    inputClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <div class="flex flex-col lg:flex-row lg:space-x-[var(--spacing-sm)]">
    <TextInput
      name="phone"
      type="tel"
      label="Phone Number"
      placeholder="123-456-7890"
      required
      inputClass={inputClasses}
      wrapperClass={wrapperClasses}
      labelClass={labelClasses}
    />
    <TextInput
      name="email"
      type="email"
      label="Email Address"
      placeholder="you@example.com"
      required
      inputClass={inputClasses}
      wrapperClass={wrapperClasses}
      labelClass={labelClasses}
    />
  </div>

  <TextInput
    name="monthlyBill"
    label="Monthly Electric Bill Amount"
    placeholder="$0.00"
    required
    inputClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <Select
    name="ownHome"
    label="Do you own the home?"
    required
    options={[
      { value: "Yes", label: "Yes" },
      { value: "No",  label: "No"  },
    ]}
    selectClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <TextInput
    name="utilityProvider"
    label="Utility Provider"
    placeholder="e.g. PSE&G"
    required
    inputClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <Select
    name="roofType"
    label="Roof Type"
    required
    options={[
      { value: "Shingle", label: "Shingle" },
      { value: "Flat",    label: "Flat"    },
      { value: "Metal",   label: "Metal"   },
      { value: "Other",   label: "Other"   },
    ]}
    selectClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <Select
    name="shading"
    label="Are there trees or shading on your roof?"
    required
    options={[
      { value: "Yes", label: "Yes" },
      { value: "No",  label: "No"  },
    ]}
    selectClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <TextInput
    name="preferredConsultation"
    type="datetime-local"
    label="Preferred Date & Time for Consultation"
    required
    inputClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />

  <Textarea
    name="notes"
    label="Additional Notes or Questions"
    placeholder="Let us know any special requests or questionsâ€¦"
    rows={5}
    inputClass={inputClasses}
    wrapperClass={wrapperClasses}
    labelClass={labelClasses}
  />
</Form>
